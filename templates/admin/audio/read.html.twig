


{% extends 'base.html.twig' %}

{% block subtitle %}Musique
	{{audio.id}}
{% endblock %}

{% block body %}

<div class="flex justify-evenly items-center flex-wrap py-6">
	<h1 class="h1-white">Musique n°
		{{audio.id}}
	</h1>
	<a class="btn-test bgPurpleshred" href="{{ path('admin_audio_browse') }}">Retourner à la liste</a>
</div>


<div class="accueil-bg-magic   w-80 sm:w-2/3 border border-gray-200 rounded-lg my-5  shadow-md mx-auto ">

	<div class="flex justify-between items-center flex-wrap">

		<div class="md:w-1/3 p-6 ">
			<img class="border border-white shadow-md" src="{{asset('images_audio_folder/' ~ audio.image)}}" alt="thumbnail de la musique">
		</div>

		<div class="p-6 md:w-2/3 ">

			<p class="lg:text-2xl text-md font-bold text-black">Titre de la musique:
				<span class="text-white">{{audio.name}}</span>
			</p>

			<p class="lg:text-2xl text-md font-bold text-black">Lien de la musique :
				<span class="text-white">{{audio.music}}</span>
			</p>
			

			<div class="flex justify-between items-center my-6 ">

				<a class="btn-test bgValidateshred" href="{{ path('admin_audio_edit', {'id': audio.id}) }}">Editer la musique</a>
				{{ include('admin/audio/_delete_form.html.twig') }}
			</div>


		</div>

	</div>

	<div class="my-4">

		<h2 class="lg:text-2xl text-md font-bold text-black text-center"><span class="border-b-2 border-white">Catégories qui incluent cette musique :</span></h2>
		
		{% for category in audio.categories %}
				<div class="my-4">
					<p class="lg:text-xl text-md font-bold text-black text-center">Catégorie :
						<span class="text-white">{{category.name}}</span>
						<a class="ml-4 text-green-400 border-b-2 border-green-400" href="{{path('admin_category_read', {'id' : category.id})}}">Détails</a>
					</p>

				</div>
			{% endfor %}
		</div>

	</div>

{% endblock %}