


{% extends 'base.html.twig' %}

{% block subtitle %}Liste des livres
{% endblock %}

{% block body %}
	<h1 class="h1-white">Liste des livres</h1>
	<div class="flex justify-center my-5 ">
		<a class="btn-test bgValidateshred text-center" href="{{ path('admin_book_add') }}">Créer un livre</a>
	</div>

	<table class="border-collapse border-white border mx-auto text-white bg-black bg-opacity-50 mb-60">
		<thead >
			<tr >
				<th class="sm:p-2 border-white border-2">Id</th>
				<th class="sm:p-2 border-white border-2">Titre</th>
				<th class="sm:p-2 border-white border-2">Catégorie</th>
				<th class="sm:p-2 border-white border-2">Frontpage</th>
				<th class="sm:p-2 border-white border-2">actions</th>
			</tr>
		</thead>
		<tbody>
			{% for book in books %}
				<tr>
					<td class="sm:p-2 border-white border-2">{{ book.id }}</td>
					<td class="sm:p-2 border-white border-2">{{ book.title }}</td>
					<td class="sm:p-2 border-white border-2">
                    {% for category in book.categories %}
                        {{ category.name }} - 
                    {% endfor %}
                    </td>
					<td class="sm:p-2 border-white border-2">{{ book.isHome ? "Oui" : "Non" }}</td>
					<td class="sm:p-2 border-white border-2">
						<a class="sm:p-2 text-blue-200 hover:text-white border-blue-200 border-b-2" href="{{ path('admin_book_read', {'id': book.id}) }}">Détails</a>
						<a class="sm:p-2 text-yellow-200 hover:text-white border-yellow-200 border-b-2" href="{{ path('admin_book_edit', {'id': book.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Pas de livres trouvés</td>
				</tr>
			{% endfor %}
		</tbody>

	</table>



{% endblock %}