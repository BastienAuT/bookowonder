

{% extends 'base.html.twig' %}

{% block subtitle %}Liste des recommandations
{% endblock %}

{% block body %}
	<h1 class="h1-white">Liste des recommandations</h1>
	<div class="flex justify-center my-5 ">
		<a class="btn-test bgValidateshred text-center" href="{{ path('admin_recommendation_add') }}">Créer une recommandation</a>
	</div>

	<table class="border-collapse border-white border mx-auto text-white bg-black bg-opacity-50 mb-60">
		<thead >
			<tr >
				<th class="sm:p-2 border-white border-2">Id</th>
				<th class="sm:p-2 border-white border-2">Contenu</th>
				<th class="sm:p-2 border-white border-2">Recommandation</th>
				<th class="sm:p-2 border-white border-2">actions</th>
			</tr>
		</thead>
		<tbody>
			{% for recommendation in recommendations %}
				<tr>
					<td class="sm:p-2 border-white border-2">{{ recommendation.id }}</td>
					<td class="sm:p-2 border-white border-2">{{ recommendation.content }}</td>
					<td class="sm:p-2 border-white border-2">{{ recommendation.recommendation }}</td>
					<td class="sm:p-2 border-white border-2">
						<a class="sm:p-2 text-blue-200 hover:text-white border-blue-200 border-b-2" href="{{ path('admin_recommendation_read', {'id': recommendation.id}) }}">Détails</a>
						<a class="sm:p-2 text-yellow-200 hover:text-white border-yellow-200 border-b-2" href="{{ path('admin_recommendation_edit', {'id': recommendation.id}) }}">Editer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Pas de recommandations trouvées</td>
				</tr>
			{% endfor %}
		</tbody>

	</table>



{% endblock %}