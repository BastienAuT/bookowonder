{% extends 'base.html.twig' %}

{% block subtitle %}Auteur
	{{author.id}}
{% endblock %}

{% block body %}

	<div class="flex justify-evenly items-center flex-wrap py-6">
		<h1 class="h1-white">Auteur n°
			{{author.id}}
		</h1>
		<a class="btn-test bgPurpleshred" href="{{ path('admin_author_browse') }}">Retourner à la liste</a>
	</div>


	<div class="accueil-bg-magic text-center   w-80 sm:w-1/3 border border-gray-200 rounded-lg my-5  shadow-md mx-auto ">

		<div class="flex justify-center items-center flex-wrap">


			<div class="p-6  w-full">

				<p class="lg:text-2xl text-md font-bold text-black">Nom de l'éditeur :
					<span class="text-white">{{author.firstname}} {{author.lastname}}</span>
				</p>


				<div class="flex justify-between items-center my-6 ">

					<a class="btn-test bgValidateshred" href="{{ path('admin_author_edit', {'id': author.id}) }}">Modifier l'auteur</a>
					{{ include('admin/author/_delete_form.html.twig') }}
				</div>


			</div>


		</div>
		<div class="my-4">

			<h2 class="lg:text-2xl text-md font-bold text-black text-center">
				<span class="border-b-2 border-white">Livrés édités</span>
			</h2>

			{% for book in author.books %}
				<div class="my-4">
					<p class="lg:text-xl text-md font-bold text-black text-center">Livre :
						<span class="text-white">{{book.title}}</span>
						<a class="ml-4 text-green-400 border-b-2 border-green-400" href="{{path('admin_book_read', {'id' : book.id})}}">Détails</a>
					</p>

				</div>
			{% endfor %}
		</div>

	</div>


{% endblock %}
