{% extends 'base.html.twig' %}

{% block subtitle %}Catégorie
	{{category.id}}
{% endblock %}

{% block body %}

	<div class="flex justify-evenly items-center flex-wrap py-6">
		<h1 class="h1-white">Catégorie n°
			{{category.id}}
		</h1>
		<a class="btn-test bgPurpleshred" href="{{ path('admin_category_browse') }}">Retourner à la liste</a>
	</div>


	<div class="accueil-bg-magic text-center   w-80 sm:w-2/3 border border-gray-200 rounded-lg my-5  shadow-md mx-auto ">

		<div class="flex justify-evenly items-center flex-wrap">
			{% if category.image %}
			<div class="p-6 md:w-1/3 text-center">

				<img class="border border-white shadow-md" src="{{asset('images_category_folder/' ~ category.image)}}" alt="Couverture du livre">
			</div>


			<div class="p-6 md:2/3  ">
			{% else %}
				<div class="p-6  ">
			{% endif %}
			


				<p class="lg:text-2xl text-md font-bold text-black">Nom de la catégorie :
					<span class="text-white">{{category.name}}</span>
				</p>


				<div class="flex justify-between items-center my-6 ">

					<a class="btn-test bgValidateshred" href="{{ path('admin_category_edit', {'id': category.id}) }}">Modifier la catégorie</a>
					{{ include('admin/category/_delete_form.html.twig') }}
				</div>


			</div>


		</div>
		<div class="flex justify-evenly items-center flex-wrap">
			<div class="my-4">

				<h2 class="lg:text-2xl text-md font-bold text-black text-center">
					<span class="border-b-2 border-white">Livres dans cette catégorie :</span>
				</h2>

				{% for book in category.books %}
					<div class="my-4">
						<p class="lg:text-xl text-md font-bold text-black text-center">Livre :
							<span class="text-white">{{book.title}}</span>
							<a class="ml-4 text-green-400 border-b-2 border-green-400" href="{{path('admin_book_read', {'id' : book.id})}}">Détails</a>
						</p>

					</div>
				{% endfor %}
			</div>
			<div class="my-4">

				<h2 class="lg:text-2xl text-md font-bold text-black text-center">
					<span class="border-b-2 border-white">Musiques dans cette catégorie :</span>
				</h2>

				{% for audio in category.audio %}
					<div class="my-4">
						<p class="lg:text-xl text-md font-bold text-black text-center">Livre :
							<span class="text-white">{{audio.name}}</span>
							<a class="ml-4 text-green-400 border-b-2 border-green-400" href="{{path('admin_audio_read', {'id' : audio.id})}}">Détails</a>
						</p>

					</div>
				{% endfor %}
			</div>


		</div>


	</div>


{% endblock %}
