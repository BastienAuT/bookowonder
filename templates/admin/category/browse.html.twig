


{% extends 'base.html.twig' %}

{% block subtitle %}Liste des catégories
{% endblock %}

{% block body %}
	<h1 class="h1-white">Liste des catégories</h1>
	<div class="flex justify-center my-5 ">
		<a class="btn-test bgValidateshred text-center" href="{{ path('admin_category_add') }}">Créer une catégorie</a>
	</div>

	<table class="border-collapse border-white border mx-auto text-white bg-black bg-opacity-50 mb-60">
		<thead >
			<tr >
				<th class="sm:p-2 border-white border-2">Id</th>
				<th class="sm:p-2 border-white border-2">Catégorie</th>
				<th class="sm:p-2 border-white border-2">Nombre de livres</th>
				<th class="sm:p-2 border-white border-2">actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td class="sm:p-2 border-white border-2">{{ category.id }}</td>
					<td class="sm:p-2 border-white border-2">{{ category.name }}</td>
					<td class="sm:p-2 border-white border-2">{{ category.books|length }}</td>
					<td class="sm:p-2 border-white border-2">
						<a class="sm:p-2 text-blue-200 hover:text-white border-blue-200 border-b-2" href="{{ path('admin_category_read', {'id': category.id}) }}">Détails</a>
						<a class="sm:p-2 text-yellow-200 hover:text-white border-yellow-200 border-b-2" href="{{ path('admin_category_edit', {'id': category.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">Pas de catégories trouvées</td>
				</tr>
			{% endfor %}
		</tbody>

	</table>



{% endblock %}