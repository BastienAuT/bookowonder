{% extends 'base.html.twig' %}

{% block subtitle %}Connexion{% endblock %}

{% block body %}
<div class="max-w-2xl h-screen mx-auto my-auto py-32  px-2 ">
   <form method="post">
    {% if error %}
        <div class="text-red-500 text-center text-2xl border-2 border-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connectés en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="h1-white py-6">Veuillez vous connecter</h1>



    <div class="mb-6">
    <label for="inputEmail" class="text-white mb-2 block">Votre Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="mt-1 w-full bg-black bg-opacity-50 text-white rounded-md boxShadowCustom" autocomplete="email" required autofocus>
    
    </div>

    <div class="mb-6">
    <label for="inputPassword" class="text-white mb-2 block">Password</label>
    <input type="password" name="password" id="inputPassword" class="mt-1 w-full bg-black bg-opacity-50 text-white rounded-md boxShadowCustom" autocomplete="current-password" required>

    </div>
    
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="flex justify-center items-center my-10">
    <button class="btn-test bgValidateshred" type="submit">
        Se connecter
    </button>
    </div>
    
</form>
    </div>

{% endblock %}
